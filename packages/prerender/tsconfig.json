{
  "extends": "../../tsconfig.compilerOption.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "outDir": "dist",
    "moduleResolution": "node16", // because of dual FE packages
    "paths": {
      "src/*": ["./src/*"]
    },
    "allowJs": true
  },
  "include": ["./src/**/*", "ambient.d.ts"],
  "references": [
    { "path": "../web" },
    { "path": "../router" },
    { "path": "../internal" },
    { "path": "../project-config" },
    { "path": "../auth" },
    { "path": "../structure" }
  ]
}
